<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical"
			  android:padding="5dp">
	<TextView android:id="@+id/tv_contact_head"
			  android:layout_width="match_parent"
			  android:layout_height="20dp"
			  android:background="#AAAAAA"
			  android:paddingLeft="10dp"
			  android:text="@string/app_name"/>
	<RelativeLayout android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/selector_btn_bg"
					android:padding="3dp">
		<ImageView android:id="@+id/iv_contact_avatar"
				   android:layout_width="50dp"
				   android:layout_height="50dp"
				   android:background="@mipmap/img_default_avatar"/>
		<TextView android:id="@+id/tv_contact_name"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginLeft="3dp"
				  android:layout_marginTop="3dp"
				  android:layout_toRightOf="@id/iv_contact_avatar"
				  android:singleLine="true"
				  android:text="Name"
				  android:textColor="#000000"
				  android:textSize="18sp"/>
		<TextView android:id="@+id/tv_contact_address"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_below="@id/tv_contact_name"
				  android:layout_marginLeft="3dp"
				  android:layout_marginTop="3dp"
				  android:layout_toRightOf="@id/iv_contact_avatar"
				  android:singleLine="true"
				  android:text="address"
				  android:textSize="15sp"/>
	</RelativeLayout>
</LinearLayout>