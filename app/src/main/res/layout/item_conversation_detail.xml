<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
	<TextView android:id="@+id/tv_sms_date"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_centerHorizontal="true"
			  android:layout_marginTop="10dp"
			  android:background="@drawable/bg_conversation_detail_date"
			  android:padding="4dp"
			  android:clickable="false"
			  android:text="@string/app_name"
			  android:textColor="#FFFFFF"/>
	<TextView android:id="@+id/tv_sms_receive"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_below="@id/tv_sms_date"
			  android:layout_marginLeft="10dp"
			  android:layout_marginRight="40dp"
			  android:layout_marginTop="10dp"
			  android:background="@drawable/selector_friend_bubble"
			  android:gravity="center_vertical"
			  android:minWidth="80dp"
			  android:text="@string/app_name"
			  android:textColor="#000000"
			  android:textSize="15sp"/>
	<TextView android:id="@+id/tv_sms_send"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_alignParentRight="true"
			  android:layout_below="@id/tv_sms_receive"
			  android:layout_gravity="right"
			  android:layout_marginLeft="40dp"
			  android:layout_marginRight="10dp"
			  android:layout_marginTop="10dp"
			  android:background="@drawable/selector_user_bubble"
			  android:gravity="center_vertical"
			  android:minWidth="80dp"
			  android:text="@string/app_name"
			  android:textColor="#FFFFFF"
			  android:textSize="15sp"/>
</RelativeLayout>