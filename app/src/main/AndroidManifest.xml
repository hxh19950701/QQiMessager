<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.hxh19950701.qqimessager"
		  xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.READ_SMS"/>
	<uses-permission android:name="android.permission.SEND_SMS"/>
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	<uses-permission android:name="android.permission.WRITE_SMS"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/MyActivityTheme">
		<activity android:name=".ui.activity.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".ui.activity.ConversationDetailActivity"
			android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="adjustUnspecified|stateHidden">
		</activity>
		<activity android:name=".ui.activity.SearchActivity">
		</activity>
		<activity android:name=".ui.activity.NewConversationActivity">
		</activity>
		<activity android:name=".ui.activity.ContactInfoActivity">
		</activity>
	</application>

</manifest>